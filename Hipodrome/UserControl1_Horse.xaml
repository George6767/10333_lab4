<UserControl x:Class="Hipodrome.UserControl1_Horse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hipodrome"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="16px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="textBlockSpeed" FontSize="18" Foreground="Black" 
                   HorizontalAlignment="Center" Visibility="Hidden"/>
        <TextBlock x:Name="textBlockPosition" Grid.Row="1"   HorizontalAlignment="Center"
                   FontSize="12" Foreground="Red" Visibility="Hidden"/>
        <Image Height="65" Width="100" Grid.Row="2" Source="Resources/horse.jpg" MouseLeftButtonDown="Image_MouseLeftButtonDown" MouseRightButtonDown="Image_MouseRightButtonDown"/>
    </Grid>
</UserControl>
